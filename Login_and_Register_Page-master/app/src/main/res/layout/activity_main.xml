<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalScrollbarPosition="right">


        <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:fontFamily="@font/coiny"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegister"
        android:layout_marginStart="@dimen/dp_30"
        android:fontFamily="casual"
        android:text="@string/Register_caption"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_subtitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="20dp"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10sp"
        android:background="@drawable/et"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etUsername"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:background="@drawable/et"
        android:drawableStart="@drawable/ic_baseline_mail_24"
        android:drawablePadding="10sp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10sp"
        android:background="@drawable/et"
        android:hint="Enter Password"
        android:inputType="textWebPassword"
        android:padding="15dp"
        android:textSize="15sp" />

            <RadioButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Male"></RadioButton>

            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn1"
                android:layout_below="@+id/etPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Female"></RadioButton>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:background="@drawable/et"
        android:hint=" Enter address"
        android:padding="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:background="@drawable/et"
        android:hint=" Enter city "
        android:padding="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/city"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:background="@drawable/et"
        android:hint=" Enter state "
        android:padding="15dp"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/btnHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/state"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_30"
        android:text="Already have an account" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="#313435"
        android:fontFamily="@font/copse"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="#2D2F31" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/btnRegister"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/google" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/btnRegister"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_100"
        android:src="@drawable/facebook_icon" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>